<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quadro de Tarefas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    a{
      text-decoration: none;
      color: black;
    }
    .navbar-custom {
      background-color: #e50914;
      padding: 0.5rem 1rem;
    }

    .nav-icon {
      width: 40px;
      height: 40px;
      background-color: white;
      border-radius: 10px;
      padding: 5px;
    }

    .profile-icon {
      width: 40px;
      height: 40px;
      background-color: black;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
    }

    .form-control {
      border-radius: 10px;
    }

    .nav-link {
      color: black !important;
      font-weight: 500;
    }

    .nav-link:hover {
      text-decoration: underline;
    }

    body {
      font-family: sans-serif;
      min-height: 100vh;
    }
    .sidebar {
      background-color: #f8cfd1;
      min-height: 100vh;
      box-shadow: 2px 0 5px rgba(0,0,0,0.05);
    }
    .sidebar .btn {
      box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
    }
    .main-card {
      background-color: #fb8686;
    }
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-custom d-flex justify-content-between align-items-center">
    
    <div class="d-flex align-items-center gap-3">
      <img src="/images/logo.png" alt="Logo Morango" class="nav-icon">
      <a class="nav-link" href="/boards"><i class="bi bi-chevron-right"></i> Home</a>
      <a class="nav-link" href="#"><i class="bi bi-chevron-right"></i> Recent</a>
      <a class="nav-link" href="#"><i class="bi bi-chevron-right"></i> Favorites</a>
    </div>

    <div class="d-flex align-items-center gap-3">
      <div class="input-group">
        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
        <input type="text" class="form-control border-start-0" placeholder="Search">
      </div>
      <div class="profile-icon">
        <i class="bi bi-person-fill"></i>
      </div>
    </div>

  </nav>
   <!-- /NAVBAR -->


  <div class="d-flex" style="min-height: calc(100vh - 56px);"> <!-- 56px = altura aproximada da navbar -->
  
  <!-- Sidebar -->
  <div class="sidebar d-flex flex-column p-3 gap-2" style="width: 140px;">
    <% quadrosUsuario.forEach(q => { %>
      <a href="/board/<%= q.quaid %>" class="text-decoration-none">
        <button class="btn btn-light w-100 rounded-3"><%= q.quanome %></button>
      </a>
    <% }); %>
  </div>

   <!-- MAIN -->
  <div class="flex-fill d-flex justify-content-center align-items-center p-4">
    <div class="card main-card p-4 rounded-4" style="width: 320px;">
      
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="bg-white text-center flex-grow-1 p-2 rounded-3 m-0 fw-bold"><%= quadro.quanome %></h2>
        <a href="/board/<%= quadro.quaid %>/new-task">
          <button class="btn btn-light ms-2 rounded-circle" style="width: 40px; height: 40px; font-size: 20px;">+</button>
        </a>
      </div>
      <% tarefas.forEach(t => { %>
      <div class="bg-white rounded-3 p-2 mb-2 d-flex justify-content-between align-items-center">
        <a href="/board/<%= quadro.quaid %>/task/<%= t.tarid %>" class="fw-medium" for="tarefa1"><%= t.tarnome %></a>
        <input type="checkbox" id="tarefa1" class="form-check-input" <%= t.tarstatus === 1 ? 'checked disabled' : 'disabled' %>>
      </div>
      <% }); %>
    </div>
  </div>

</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
